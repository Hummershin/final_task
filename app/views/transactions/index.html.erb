<%= render "layouts/sign-up-header"%>

<div class ='transaction-main'>
  <div class ='transaction-main-wrap'>
    <div class='transaction-main-header'>
      <h1 class='transaction-main-header-text'>
        購入内容の確認
      </h1>
    </div>
    <div class='buy-content'>
      <%= image_tag 'm48043690132_1.jpg', class: 'buy-content-img' %>
      <div class= 'buy-content-info'>
        <h2 class='buy-content-text'>
          送料無料　Lサイズ　シンプソンズ　ロンT H&M エイチアンドエム
        <h2>
        <div class='buy-content-price'>
          <p class='content-price'>¥2,000</p>
          <p class='price-info'>（税込）送料込み</p>
        </div>
      </div>
    </div>
    <div class='content-payment'>
      <h1 class='content-payment-headline'>
        支払金額
      </h1>
      <p class='content-payment-price'>
        ¥2,000
      </p>
    </div>
    <form class='credit-card-form'>
      <h1 class='info-input-haedline'>
        クレジットカード情報入力
      </h1>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">カード情報</label>
          <span class="form-require">必須</span>
        </div>
        <input type="text" placeholder="半角数字のみ" class="input-default">
        <div class='available-card'>
          <%= image_tag 'logo_visa.gif', class: 'card-logo'%>
          <%= image_tag 'logo_mastercard.gif', class: 'card-logo'%>
          <%= image_tag 'jcb-logomark-img-01.gif', class: 'card-logo'%>
          <%= image_tag 'amex-logomark-img-04.gif', class: 'card-logo'%>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">有効期限</label>
          <span class="form-require">必須</span>
        </div>
        <div class='input-name-wrap'>
          <select  class="input-name">
          </select>
          <p>月</p>
          <select  class="input-name">
          </select>
          <p>年</p>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">セキュリティコード</label>
          <span class="form-require">必須</span>
        </div>
        <input type="text" placeholder="カード背面4桁もしくは3桁の番号" class="input-default">
      </div>
    </form>
    <form class='shipping-address-form'>
      <h1 class='info-input-haedline'>
        配送先入力
      </h1>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">郵便番号</label>
          <span class="form-require">必須</span>
        </div>
        <input type="text" placeholder="例）123-4567" class="input-default">
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">都道府県</label>
          <span class="form-require">必須</span>
        </div>
        <select placeholder="--" class="input-default"></select>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">市区町村</label>
          <span class="form-require">必須</span>
        </div>
        <input type="text" placeholder="例）横浜市緑区" class="input-default">
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">番地</label>
          <span class="form-require">必須</span>
        </div>
        <input type="text" placeholder="例）青山1-1-1" class="input-default">
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">建物名</label>
          <span class="form-any">任意</span>
        </div>
        <input type="text" placeholder="例）柳ビル103" class="input-default">
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">電話番号</label>
          <span class="form-any">任意</span>
        </div>
        <input type="text" placeholder="例）09012345678" class="input-default">
      </div>
    </form>
    <div class='buy-btn'>
      <button type="submit" class="buy-red-btn">購入</button>
    </div>
  </div>
</div>




<%= render "layouts/sign-up-footer"%>